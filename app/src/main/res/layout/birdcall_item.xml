<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="@dimen/default_image_size"
        android:layout_height="@dimen/default_image_size"
        android:padding="@dimen/default_image_padding"
        android:src="@drawable/ic_tree"
        android:contentDescription="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_image_size"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/birdcall_title"
            style="@style/ListItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/not_specified" />

        <TextView
            android:id="@+id/birdcall_date_and_time"
            style="@style/ListItemBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/not_specified" />
    </LinearLayout>
</FrameLayout>